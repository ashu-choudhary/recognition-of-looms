<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp"
    >

    <TextView
        android:id="@+id/welcomeText"
        android:text="Welcome to AI-FabricScan"
        android:textSize="38sp"
        android:textStyle="italic|bold"
        android:textColor="#DD000000"
        android:textAlignment="center"
        android:layout_marginTop="240dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tag_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#DD000000"
        android:textAlignment="center"
        android:text="IIT Mandi, Himachal Pradesh"
        android:layout_above="@+id/tag_2"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/tag_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#DD000000"
        android:textAlignment="center"
        android:text="With the collaboration of"
        android:layout_above="@+id/tag_3"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/tag_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#DD000000"
        android:textAlignment="center"
        android:text="COER University, Roorkee"
        android:layout_above="@+id/coer_logo"
        android:layout_marginBottom="35dp"
        />



    <ImageView
        android:id="@+id/coer_logo"
        android:layout_width="200dp"
        android:layout_height="171dp"
        android:src="@drawable/coer_university"
        android:layout_above="@+id/startButton"
        android:layout_marginBottom="35dp"
        />

    <ImageView
        android:id="@+id/iit_logo"
        android:layout_width="181dp"
        android:layout_height="141dp"
        android:src="@drawable/iit_mandi"
        android:layout_above="@+id/startButton"
        android:layout_marginBottom="60dp"
        android:layout_alignParentEnd="true"

        />




    <ImageButton
        android:id="@+id/startButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:src="@drawable/baseline_arrow_forward_ios_24"
        app:tint="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="Arrow Down"
        />


</RelativeLayout>
